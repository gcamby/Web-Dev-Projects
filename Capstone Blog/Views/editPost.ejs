<%- include("partials/nav.ejs") %>

<div class="content-area">
    <div class="content-title"> <!-- title div -->
            <h2>Edit Post</h2>
    </div>
    <% if(locals.title && locals.bodyText){ %>
    <form action="/" method="POST" class="new-post">
        <label for="post-title">Title</label>
        <input type="text" name="post-title" value="<%=title%>">
        <label for="content">Content</label>
        <input type="text" name="content" value="<%=bodyText%>">
        <input type="submit" value="submit" style="width: 50px; margin-top: 20px; display: flex; justify-content: center;">
    </form>
    <% } %>

    </div>
</div>

</div>
